<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/brick_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_margin="@dimen/bt_ic_padding">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
                <ImageView
                    android:id="@+id/brick_icon"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_margin="@dimen/bt_ic_padding"/>
                <TextView
                    android:id="@+id/brick_title"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="brick"
                    android:textColor="@color/colorBlack"/>
                <TextView
                    android:id="@+id/brick_condition"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/and_icon"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:drawablePadding="@dimen/bt_ic_padding"
            android:src="@drawable/ic_add_black"
            android:visibility="gone"/>
</LinearLayout>